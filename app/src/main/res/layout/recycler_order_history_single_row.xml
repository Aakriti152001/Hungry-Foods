<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="205dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="7dp"
    android:background="#DFDCDC"
    app:cardCornerRadius="15dp"
   >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/llContent"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="#ffffff"
        android:weightSum="6">


        <ImageView
            android:layout_marginTop="6dp"
            android:layout_weight="1.7"
            android:id="@+id/imgOHisResImage"
            android:layout_width="0dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_food"
            android:padding="5dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:fadingEdge="vertical"/>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_weight="4.3"
            android:layout_marginStart="5dp">

            <TextView
                android:id="@+id/txtOHisResName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp"
                android:text="@string/name_of_the_restaurant"
                android:textColor="#000000"
                android:textSize="17.5sp"
                android:textStyle="bold"/>


            <TextView
                android:id="@+id/txtOHisResLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtOHisResName"
                android:layout_alignParentBottom="true"
                android:padding="2dp"
                android:text="Chandigarh"
                android:textSize="16sp"
                android:textStyle="italic" />



        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llOHisContent"
        android:layout_width="match_parent"
        android:layout_height="122dp"
        android:layout_below="@id/llContent"
        android:orientation="vertical"
        android:weightSum="10"
        >

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="#E6E5E5"
            android:layout_below="@id/llContent"/>


        <TextView
            android:id="@+id/txtOHisResOderDate"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:layout_marginTop="7dp"
            android:layout_weight="1.5"
            android:padding="4dp"
            android:text="ORDERED ON : 26 Dec 2020 at 4:55 pm"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginStart="8dp"/>


        <TextView

            android:id="@+id/txtOHisResItems"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1.5"
            android:drawablePadding="8dp"
            android:padding="3dp"
            android:text="ITEMS : 3 X Onion Pizza"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginStart="8dp"/>

        <TextView

            android:id="@+id/txtOHisResTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_weight="1.5"
            android:drawablePadding="8dp"
            android:padding="3dp"
            android:text="TOTAL AMOUNT : Rs. 150.60"
            android:textColor="#000"
            android:textSize="15sp"
            android:textStyle="normal"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"/>

    </LinearLayout>
</RelativeLayout>

</androidx.cardview.widget.CardView>